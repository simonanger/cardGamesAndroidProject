<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simonanger.cardgames.CardCountActivity"
    android:background="@drawable/tablefelt2">

    <ImageView
        android:id="@+id/cardCount1"
        android:layout_width="103dp"
        android:layout_height="140dp"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435"
        app:srcCompat="@drawable/cardback" />

    <TextView
        android:id="@+id/cardCountUp1"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardCount1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/cardCount1"
        app:layout_constraintRight_toRightOf="@+id/cardCount1"
        app:layout_constraintTop_toTopOf="@+id/cardCount1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cardCountDown1"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardCount1"
        app:layout_constraintLeft_toLeftOf="@+id/cardCount1" />

    <ImageView
        android:id="@+id/cardCount2"
        android:layout_width="103dp"
        android:layout_height="140dp"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438"
        app:srcCompat="@drawable/cardback"
        app:layout_constraintLeft_toRightOf="@+id/cardCount1"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/cardCount3"
        app:layout_constraintHorizontal_bias="0.492" />

    <TextView
        android:id="@+id/cardCountUp2"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="1dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/cardCount2"
        app:layout_constraintTop_toTopOf="@+id/cardCount2" />

    <TextView
        android:id="@+id/cardCountDown2"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardCount2"
        app:layout_constraintLeft_toLeftOf="@+id/cardCount2" />

    <ImageView
        android:id="@+id/cardCount3"
        android:layout_width="103dp"
        android:layout_height="140dp"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433"
        app:srcCompat="@drawable/cardback" />

    <TextView
        android:id="@+id/cardCountUp3"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="1dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/cardCount3"
        app:layout_constraintTop_toTopOf="@+id/cardCount3" />

    <TextView
        android:id="@+id/cardCountDown3"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardCount3"
        app:layout_constraintLeft_toLeftOf="@+id/cardCount3" />

    <Button
        android:id="@+id/cardCountBegin"
        android:layout_width="131dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onCardCountButtonClicked"
        android:text="@string/cardCountDraw"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.618" />

    <EditText
        android:id="@+id/cardCountAnswerTextBox"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/cardCountHint"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />

    <Button
        android:id="@+id/answerButton"
        android:layout_width="131dp"
        android:layout_height="50dp"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onAnswerButtonClicked"
        android:text="@string/cardCountAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/cardCountResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.708" />

    <TextView
        android:id="@+id/cardCountRules"
        android:layout_width="321dp"
        android:layout_height="129dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/cardCountRules"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
